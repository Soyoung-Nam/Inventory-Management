<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.practice.mapper.MemberMapper">

    <sql id="MemberColumns">
        no,
        id,
        name,
        pw,
        email,
        birthDate,
        joinDate,
        grade
    </sql>

    <!-- 로그인 -->
    <select id="memberLogin" parameterType="com.practice.domain.MemberDTO" resultType="com.practice.domain.MemberDTO">
        SELECT * FROM login
        WHERE id = #{id}
        AND pw = #{pw}
    </select>

</mapper>